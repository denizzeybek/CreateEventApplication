<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background2"
        android:alpha="0.9"
        tools:context=".ui.event.EventFragment">

        <ImageView
            android:id="@+id/uploadImage"
            android:layout_width="130dp"
            android:layout_height="160dp"
            android:background="@drawable/background2"
            android:alpha="0.8"
            android:clickable="true"
            android:onClick="selectImage"
            android:layout_marginTop="10dp"
            android:contentDescription="TODO"
            android:src="@android:drawable/ic_menu_upload_you_tube"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/eventNameText"
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Etkinlik Adı"
            android:textColorHint="#000000"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/uploadImage" />

        <EditText
            android:id="@+id/detailsText"
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:textColorHint="#000000"
            android:inputType="textPersonName"
            android:hint="Açıklama"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eventNameText" />

        <EditText
            android:id="@+id/locationText"
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:textColorHint="#000000"
            android:inputType="textPersonName"
            android:hint="Konum Bilgileri"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailsText" />

        <EditText
            android:id="@+id/eventDateText"
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:inputType="datetime"
            android:hint="Etkinlik Tarihi"
            android:textColorHint="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/locationText" />

        <EditText
            android:id="@+id/conditionsText"
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Şartlar"
            android:textColorHint="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eventDateText" />

        <EditText
            android:id="@+id/contactText"
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="İletişim Bilgileri"
            android:textColorHint="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/conditionsText" />

        <Button
            android:id="@+id/btn_create_event"
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:text="Etkinliği Oluştur"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contactText" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
